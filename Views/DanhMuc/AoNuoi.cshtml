
@{
    ViewBag.Title = "Ao Nuôi";
}

<div class="title">
    <h1>Trang Chủ</h1>  <span> - Ao Nuôi </span>
</div>

<div class="items" style="display:block;">
    <div class="group__item">
        <div style="display:flex;align-items:center;justify-content:space-between">

            <div class="input-group" style="width:70%">
                <select class="form-select">
                    <option>Tất cả khu vực</option>
                </select>
                <input type="text" class="form-control" placeholder="Tìm kiếm" aria-describedby="basic-addon2" style="padding:5px 10px">
                <div class="input-group-append">
                    <span class="input-group-text" id="basic-addon2"><i class="fa-solid fa-magnifying-glass"></i></span>
                </div>
            </div>
            <button class="btn btn-primary" data-toggle="modal" data-target="#modalAddAoNuoi">Thêm</button>
        </div>
    </div>
    <div class="group__item">
        <div class="panel panel-info">
            <h1 class="panel-heading">Có ... kết quả cho tất cả</h1>
        </div>
    </div>
    <div class="group__item" style="display:flex;">
        <table class="table table-striped">
            <thead>
                <tr style="color: #8cadb7;">
                    <th>Mã</th>
                    <th>Tên</th>
                    <th>Khu vực nuôi</th>
                    <th>Kho</th>
                    <th>A</th>
                    <th>B</th>
                    <th>C</th>
                    <th>D</th>
                    <th>Diện tích mặt nước (m2)</th>
                    <th>Độ sâu (m)</th>
                    <th style="width:150px"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>25</td>
                    <td>Ao 10</td>
                    <td>11</td>
                    <td>Kho Mười</td>
                    <td>1</td>
                    <td>5</td>
                    <td>0</td>
                    <td>3</td>
                    <td>16.5</td>
                    <td>1.5</td>

                    <td>
                        <button type="button" class="btn btn-light"><i class="fa-solid fa-pen-to-square"></i></button>
                        <button type="button" class="btn btn-warning"><i class="fa-solid fa-xmark"></i></button>
                    </td>
                </tr>
               

            </tbody>
        </table>
    </div>


    <nav>
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>
</div>

@*Modal*@


<div class="modal fade" id="modalAddAoNuoi" tabindex="-1" role="dialog" aria-labelledby="modalAddAoNuoi" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tạo ao nuôi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="group__item">
                    <label>Tên Ao</label>
                    <input type="text" class="form-control" placeholder="Tên ao" aria-describedby="basic-addon2" style="width:100%">
                </div>
                <div class="group__item">
                    <label>Chọn khu vực nuôi</label>
                    <input list="khunuoi" class="form-control" placeholder="Khu vực nuôi" aria-describedby="basic-addon2" style="width:100%">
                    <datalist id="khunuoi">
                        <option value="A">
                        <option value="B">
                    </datalist>
                </div>

                <div class="group__item">
                    <label>Kho</label>
                    <input list="kho" class="form-control" placeholder="kho" aria-describedby="basic-addon2" style="width:100%">
                    <datalist id="kho">
                        <option value="Kho chính">
                        <option value="kho A">
                    </datalist>
                </div>


                <div class="group__item">
                    <label>A (m)</label>
                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon2" style="width:100%">
                </div>

                <div class="group__item">
                    <label>B (m)</label>
                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon2" style="width:100%">
                </div>

                <div class="group__item">
                    <label>C(m)</label>
                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon2" style="width:100%">
                </div>

                <div class="group__item">
                    <label>D (m)</label>
                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon2" style="width:100%">
                </div>

                <div class="group__item">
                    <label>Diện tích mặt nước (m2)</label>
                    <input id="dtmn" type="text" class="form-control" placeholder="" aria-describedby="basic-addon2" style="width:100%">
                </div>

                <div class="group__item">
                    <label>Độ sâu (m)</label>
                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon2" style="width:100%">
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Tạo</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>

            </div>
        </div>
    </div>
</div>