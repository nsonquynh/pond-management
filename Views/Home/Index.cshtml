
@{
    ViewBag.Title = "Trang Chủ";
}

<div class="title">
    <h1>Trang Chủ</h1>  <span> - Quản Lý Nhập - </span>  <small>Nhập Thả Cá</small>
</div>
<div class="items">
    <div class="group__item">
        <label>Ao nuôi</label>
        <select>
            <option value="ao-nuoi">Ao nuôi</option>
        </select>
    </div>
    <div class="group__item">
        <label>Ngày tạo phiếu</label>
        <input type="date" name="name" />
    </div>
    <div class="group__item" style="display:flex;">
        <label>Ghi chú</label>
        <textarea id="w3review" rows="2" cols="40">
        </textarea>
    </div>
</div>

<div class="items" style="display:block">
    <div class="group__item" style="display:flex;align-items:center">
        <div style="min-width:150px"> <label style="font-weight:600">Chọn con giống</label></div>
        <select id="chonConGiong" class="form-select" style="width:80%">
            <option></option>
            <option value="1">...</option>
            <option value="2">...</option>
        </select>

    </div>
    <table class="table table-bordered mt-3 table-striped add-table-con-giong">
        <thead>
            <tr>
                <th>Tên con giống</th>
                <th>%VAT</th>
                <th style="width:50px;"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Cá rô giống</td>
                <td>10%</td>
                <td><button class="btn btn-primary">Delete</button></td>
            </tr>

        </tbody>
    </table>
</div>





<div class="items" style="display:block">
    <div class="group__item" style="display:flex;align-items:center">
        <div style="min-width:150px"> <label style="font-weight:600">Chọn nhà cung cấp</label></div>
        <select id="chonNhaCC" class="form-select" style="width:80%">
            <option></option>
            <option value="1">...</option>
            <option value="2">...</option>
        </select>

    </div>
    <table class="table table-bordered table-striped mt-3 add-table-nhacc">
        <thead>
            <tr>
                <th>Nhà cung cấp</th>
                <th>Kích cỡ</th>
                <th>Trọng lượng</th>
                <th>Đơn giá</th>
                <th>VAT</th>
                <th>Thành tiền</th>
                <th >Số lượng</th>
                <th style="width:50px;"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Vua tôm giống</th>
                <th>
                    <div class="input-group mb-3">
                        
                        <input type="text" class="form-control">
                        <div class="input-group-append">
                            <span class="input-group-text">gr/c</span>
                        </div>
                    </div>
                </th>
                <th>
                    <div class="input-group mb-3">

                        <input type="text" class="form-control">
                        <div class="input-group-append">
                            <span class="input-group-text">kg</span>
                        </div>
                    </div>
                </th>
                <th>
                    <div class="input-group mb-3">

                        <input type="text" class="form-control">
                        <div class="input-group-append">
                            <span class="input-group-text">đ</span>
                        </div>
                    </div>
                </th>
                <th>360.000</th>
                <th>
                    <div class="input-group mb-3">

                        <input type="text" class="form-control">
                        <div class="input-group-append">
                            <span class="input-group-text">đ</span>
                        </div>
                    </div>
                </th>
                <th>
                    <div class="input-group mb-3">

                        <input type="text" class="form-control">
                        <div class="input-group-append">
                            <span class="input-group-text">con</span>
                        </div>
                    </div>
                </th>
                <td><button class="btn btn-primary">Delete</button></td>
            </tr>

        </tbody>
    </table>
</div>




<div class="items">
    <div class="group__item">
        <div style="display:flex;justify-content:flex-end;align-items:flex-end;flex-direction:column">
            <button class="btn btn-primary" style="display:flex;" type="button" data-toggle="collapse" data-target="#collapseAddCost" aria-expanded="false" aria-controls="collapseAddCost">
                Thêm chi phí<span><i class="fa-regular fa-plus" style="font-size:24px;margin-left:10px"></i></span>
            </button>
            <div class="collapse mt-3" style="width:100%" id="collapseAddCost">
                <div class="card card-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Chi phí</th>
                                <th scope="col">Nội dung chi phí</th>
                                <th scope="col">Số tiền ( đã gốm VAT )</th>
                                <th scope="col" style="width:50px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <select class="form-select" style="width:100%">
                                        <option hidden>Chọn tiền mua con giống ...</option>
                                        <option value="1">..</option>
                                        <option value="2">...</option>
                                    </select>
                                </td>
                                <td> <input type="text" name="name" style="width:90%" /></td>
                                <td><input type="text" name="name" style="width:90%" /></td>
                                <td><button class="btn btn-primary">Delete</button></td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div>


<div class="items">
    <div class="group__item">
        <div style="display:flex;justify-content:center;align-items:center">
            <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#modalAddNote">Tạo phiếu</button>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="modalAddNote" tabindex="-1" role="dialog" aria-labelledby="modalAddNote" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="border-bottom:none;padding:1rem 1rem 0 1rem">
                <h5 class="modal-title" id="exampleModalLongTitle">Phiêu thả cá</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>

                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">Tổng trọng lượng con giống</th>
                            <td>...</td>
                        </tr>
                        <tr>
                            <th scope="row">Tổng số lượng con giống</th>
                            <td>...</td>
                        </tr>
                        <tr>
                            <th scope="row">Tổng tiền con giống</th>
                            <td>... đ</td>
                        </tr>
                        <tr>
                            <th scope="row">Chi phí đi kèm</th>
                            <td>...</td>
                        <tr>
                            <th scope="row">Tổng chi phí đi kèm</th>
                            <td>... đ</td>
                        </tr>
                        <tr>
                            <th scope="row">Tổng tiền trên phiếu</th>
                            <td>... đ</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer" style="border-top:none;>
                <button type="button" class="btn btn-primary " data-dismiss="modal">Tạo phiếu</button>
            </div>
        </div>
    </div>
</div>